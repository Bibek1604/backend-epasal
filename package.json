{
  "name": "epasaley-backend",
  "version": "1.0.0",
  "description": "Scalable e-commerce backend with Node.js, Express, TypeScript, MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "postinstall": "npm run build",
    "prestart": "npm run build",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest --runInBand --detectOpenHandles",
    "build": "tsc",
    "gen:admin-token": "node scripts/generate_admin_token.js",
    "gen:admin-token:save": "node scripts/generate_admin_token.js --save",
    "smoke": "node scripts/smoke_tests.js",
    "start": "node dist/server.js",
    "start:cluster": "node dist/server.js --cluster"
  },
  "keywords": [
    "ecommerce",
    "backend",
    "typescript",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "form-data": "^4.0.5",
    "helmet": "^7.2.0",
    "jest": "^30.2.0",
    "joi": "^17.11.0",
    "joi-to-swagger": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.7",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
